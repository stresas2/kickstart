<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block head %}{% endblock %}
    </head>
    <body {% block body_attributes %}{% endblock %}>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home') }}">Pagrindinis</a>
                    </li>

                    {% if app.user %}

                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('profile') }}">
                                Naudotojas: <b>{{ app.user.username }}</b>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Atsijungti</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('easyadmin') }}">Administravimas</a>
                        </li>

                    {% else %}

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Prisijungti</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">UÅ¾siregistruoti</a>
                        </li>

                    {% endif %}

                </ul>
            </div>
        </nav>

        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
